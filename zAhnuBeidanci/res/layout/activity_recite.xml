<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/view_title" />

    <include layout="@layout/view_second_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_margin="25dp"
        android:background="#eeeeee"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="2" >

            <TextView
                android:id="@+id/tv_recite_todaydic"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textSize="40sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="今日单词"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="2" >

            <TextView
                android:id="@+id/tv_recite_alreadydic"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textSize="40sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="已完成"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="2" >

            <TextView
                android:id="@+id/tv_recite_newdic"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textSize="40sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="新单词"
                android:textSize="20sp" />
        </LinearLayout>

        <Button
            android:id="@+id/bt_recite_start"
            android:layout_marginTop="23dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/selector_btn_color"
            android:gravity="center"
            android:text="开始"
            android:textColor="#fff"
            android:textSize="20sp" />

    </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="18dp"
         android:layout_marginRight="18dp"
         android:layout_marginTop="18dp"
         android:background="#aaaaaa"
         android:orientation="horizontal"
         android:weightSum="2">
		<Button 
		    android:id="@+id/bt_recite_todaydic"
		    android:layout_marginRight="1dp"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:text="今日单词"
		    android:textColor="#777"
		    android:textSize="24sp"
		    android:background="#eeeeee"/>
		<Button 
		    android:id="@+id/bt_recite_newdic"
		    android:layout_marginLeft="1dp"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:text="新单词"
		    android:textColor="#777"
		    android:textSize="24sp"
		    android:background="#eeeeee"
		    />
        </LinearLayout>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="18dp"
         android:layout_marginRight="18dp"
         android:layout_marginTop="18dp"
         android:background="#aaaaaa"
         android:orientation="horizontal"
         android:weightSum="2">
		<Button 
		    android:id="@+id/bt_recite_grasp"
		    android:layout_marginRight="1dp"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:text="掌握单词"
		    android:textColor="#777"
		    android:textSize="24sp"
		    android:background="#eeeeee"/>
		<Button 
		    android:id="@+id/bt_recite_fresh"
		    android:layout_marginLeft="1dp"
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="1"
		    android:text="生词本"
		    android:textColor="#777"
		    android:textSize="24sp"
		    android:background="#eeeeee"
		    />
        </LinearLayout>

</LinearLayout>